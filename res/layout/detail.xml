<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

	<TextView
	android:id="@+id/detailTitle"
	style="@android:style/TextAppearance.Medium"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="2dip"	
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true"/>

	<LinearLayout 
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="0dip"
	android:layout_weight="1">
		
		<ImageView
		android:id="@+id/detailImage"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:padding="2dip"/>
		
		<LinearLayout 
		android:orientation="vertical"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		
			<RelativeLayout
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	
				<TextView
				android:id="@+id/detailType"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"/>
		
				<TextView
				android:id="@+id/detailStatus"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			
			</RelativeLayout>
			
			<RelativeLayout
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	
				<TextView
				android:id="@+id/detailWatchedStatus"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"/>
		
				<TextView
				android:id="@+id/detailProgress"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			
			</RelativeLayout>
			
			<RelativeLayout
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	
				<!--TextView
				android:id="@+id/detailWatchedStatus"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"/-->
		
				<TextView
				android:id="@+id/detailVolumes"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			
			</RelativeLayout>
			
			<RelativeLayout
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	
				<TextView
				android:id="@+id/detailScore"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			
			</RelativeLayout>
			
			<RelativeLayout
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
					
				<TextView
				android:id="@+id/detailMemberScore"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>				
			
			</RelativeLayout>
		
			<RelativeLayout
			android:padding="2dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
				
				<TextView
				android:id="@+id/detailRank"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			
			</RelativeLayout>
			
		</LinearLayout>		
	
	</LinearLayout>
	
	<TextView
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"/>
	
	<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="0dip"
	android:layout_weight="1">
		<TextView
		android:id="@+id/detailSynopsis"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>
			
	</ScrollView>

</LinearLayout>
